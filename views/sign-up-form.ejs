<!DOCTYPE html>
<html>
  <head>
    <title>Sign Up</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link href="/stylesheets/output.css" rel="stylesheet" />
    <script src="/javascripts/sign-up.js" defer></script>
  </head>
  <body class="p-0 text-slate-700 bg-slate-100">
    <div
      class="p-6 md:px-8 py-8 md:py-16 gap-y-8 md:gap-y-16 w-full h-screen flex flex-col justify-start items-center bg-slate-100"
    >
      <h1 class="text-center font-bold text-2xl md:text-3xl">
        Members Only Forum
      </h1>
      <section
        class="md:min-w-[500px] min-w-full p-6 md:p-8 bg-white flex flex-col gap-y-6 justify-center items-center text-sm drop-shadow-lg rounded-lg"
      >
        <h2 class="text-xl md:text-2xl">Sign Up</h2>
        <form action="" method="POST" class="flex flex-col gap-y-6 w-full">
          <div class="flex flex-col gap-y-2">
            <label for="first_name">First Name</label>
            <input
              class="px-4 py-2 border border-slate-500 rounded-lg focus:bg-white"
              required
              autocomplete="off"
              name="first_name"
              placeholder="First Name"
              type="text"
              value="<%= typeof first_name === `undefined` ? `` : first_name %>"
            />
          </div>

          <div class="flex flex-col gap-y-2">
            <label for="last_name">Last Name</label>
            <input
              class="px-4 py-2 border border-slate-500 rounded-lg focus:bg-white"
              required
              autocomplete="off"
              name="last_name"
              placeholder="Last Name"
              type="text"
              value="<%= typeof last_name === `undefined` ? `` : last_name %>"
            />
          </div>

          <div class="flex flex-col gap-y-2">
            <label for="email">Email</label>
            <input
              class="px-4 py-2 border border-slate-500 rounded-lg focus:bg-white"
              required
              autocomplete="off"
              name="email"
              placeholder="Email"
              type="email"
              value="<%= typeof email === `undefined` ? `` : email %>"
            />
          </div>

          <div class="relative flex flex-col gap-y-2">
            <label for="password">Password</label>
            <input
              class="px-4 py-2 border border-slate-500 rounded-lg"
              id="password"
              required
              autocomplete="off"
              name="password"
              type="password"
              placeholder="Password"
            />
            <img
              id="toggle-pw"
              class="absolute bottom-1.5 right-2 w-6 cursor-pointer"
              src="/images/eye.svg"
            />
          </div>

          <div class="relative flex flex-col gap-y-2">
            <label for="confirm">Confirm Password</label>
            <input
              class="px-4 py-2 border border-slate-500 rounded-lg"
              id="confirm"
              required
              autocomplete="off"
              name="confirm"
              type="password"
              placeholder="Confirm Password"
            />
            <img
              id="toggle-confirm"
              class="absolute bottom-1.5 right-2 w-6 cursor-pointer"
              src="/images/eye.svg"
            />
          </div>

          <button
            type="submit"
            class="px-4 py-2 border border-slate-500 rounded-lg bg-slate-500 text-white hover:bg-white hover:text-slate-700 transition"
          >
            Sign Up
          </button>
        </form>

        <div class="w-full border-slate-500 border-t"></div>

        <div class="flex flex-row items-center gap-x-2">
          <p>Already have an account?</p>
          <a class="hover:underline" href="/posts">Log In</a>
        </div>
      </section>
    </div>
  </body>
</html>
